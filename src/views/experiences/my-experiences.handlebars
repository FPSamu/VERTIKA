    function showDeleteModal(id) {
      currentExperienceId = id;
      currentAction = 'delete';
      document.getElementById('modalTitle').textContent = '¬øEliminar experiencia?';
      document.getElementById('modalMessage').textContent = 'Esta acci√≥n no se puede deshacer. ¬øEst√°s seguro?';
      document.getElementById('confirmModal').style.display = 'block';
    }

    function closeModal() {
      document.getElementById('confirmModal').style.display = 'none';
      currentAction = null;
      currentExperienceId = null;
    }

    async function confirmAction() {
      if (currentAction === 'delete' && currentExperienceId) {
        await deleteExperience(currentExperienceId);
      }
      closeModal();
    }

    async function deleteExperience(id) {
      try {
        const res = await fetchWithAuth(`/api/experiences/${id}`, {
          method: 'DELETE'
        });

        if (res.ok || res.status === 204) {
          alert('Experiencia eliminada exitosamente');
          await loadExperiences();
        } else {
          const error = await res.json();
          alert(error.error || 'Error al eliminar experiencia');
        }
      } catch (err) {
        console.error(err);
        if (err.message !== 'Sesi√≥n expirada') {
          alert('Error al eliminar experiencia');
        }
      }
    }

    async function logout() {
      const token = localStorage.getItem('accessToken');
      
      if (token) {
        try {
          await fetch('/api/auth/logout', {
            method: 'POST',
            headers: { 'Authorization': 'Bearer ' + token }
          });
        } catch (err) {
          console.error(err);
        }
      }
      
      localStorage.clear();
      window.location.href = '/api';
    }

    // Cerrar modal al hacer click fuera
    window.onclick = function(event) {
      const confirmModal = document.getElementById('confirmModal');
      const reviewsModal = document.getElementById('reviewsModal');
      
      if (event.target === confirmModal) closeModal();
      if (event.target === editModal) closeEditModal();
      if (event.target === reviewsModal) closeReviewsModal();
    }

    function viewReviews(experienceId) {
      const modal = document.getElementById('reviewsModal');
      const container = document.getElementById('reviewsListContainer');
      
      container.innerHTML = '<div class="loading">Cargando rese√±as...</div>';
      modal.style.display = 'block';

      fetchWithAuth(`/api/reviews/experience/${experienceId}`)
        .then(res => res.json())
        .then(reviews => {
          if (!Array.isArray(reviews) || reviews.length === 0) {
            container.innerHTML = '<p style="text-align: center; color: #666; padding: 20px;">A√∫n no hay rese√±as para esta experiencia.</p>';
            return;
          }

          container.innerHTML = reviews.map(review => `
            <div class="review-item">
              <div class="review-header">
                <div class="review-user">
                  ${review.userId && review.userId.avatarUrl 
                    ? `<img src="${review.userId.avatarUrl}" class="review-avatar" alt="${review.userId.name}">`
                    : `<div class="review-avatar"><i class="fas fa-user"></i></div>`
                  }
                  <div>
                    <div>${review.userId ? review.userId.name : 'Usuario desconocido'}</div>
                    <div class="review-date">${new Date(review.createdAt).toLocaleDateString()}</div>
                  </div>
                </div>
                <div class="review-rating">
                  <div class="review-stars">
                    ${'‚òÖ'.repeat(review.experienceRating)}${'‚òÜ'.repeat(5 - review.experienceRating)}
                  </div>
                </div>
              </div>
              <p>${review.comment || ''}</p>
              ${review.photos && review.photos.length > 0 ? `
                <div class="review-photos">
                  ${review.photos.map(photo => `<img src="${photo}" class="review-photo" onclick="window.open('${photo}', '_blank')">`).join('')}
                </div>
              ` : ''}
            </div>
          `).join('');
        })
        .catch(err => {
          console.error(err);
          container.innerHTML = '<p style="color: red; text-align: center;">Error al cargar las rese√±as.</p>';
        });
    }

    function closeReviewsModal() {
      document.getElementById('reviewsModal').style.display = 'none';
    }
