  <script>
    let allExperiences = [];
    let currentAction = null;
    let currentExperienceId = null;

    // Cargar experiencias al iniciar
    document.addEventListener('DOMContentLoaded', async () => {
      await loadExperiences();
    });

    // Funci√≥n para refrescar el token si ha expirado
    async function refreshAccessToken() {
      const refreshToken = localStorage.getItem('refreshToken');
      
      if (!refreshToken) {
        console.error('No hay refresh token disponible');
        return null;
      }

      try {
        const res = await fetch('/api/auth/refresh', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ refreshToken })
        });

        if (res.ok) {
          const data = await res.json();
          localStorage.setItem('accessToken', data.data.accessToken);
          console.log('Token refrescado exitosamente');
          return data.data.accessToken;
        } else {
          console.error('Error al refrescar token');
          return null;
        }
      } catch (err) {
        console.error('Error en refresh token:', err);
        return null;
      }
    }

    // Funci√≥n para hacer fetch con reintento autom√°tico si el token expira
    async function fetchWithAuth(url, options = {}) {
      let token = localStorage.getItem('accessToken');
      
      if (!token) {
        throw new Error('No hay token de autenticaci√≥n');
      }

      // Primer intento
      let response = await fetch(url, {
        ...options,
        headers: {
          ...options.headers,
          'Authorization': 'Bearer ' + token
        }
      });

      // Si el token expir√≥, intentar refrescarlo
      if (response.status === 401) {
        console.log('Token expirado, intentando refrescar...');
        const newToken = await refreshAccessToken();
        
        if (newToken) {
          // Reintentar con el nuevo token
          response = await fetch(url, {
            ...options,
            headers: {
              ...options.headers,
              'Authorization': 'Bearer ' + newToken
            }
          });
        } else {
          // Si no se pudo refrescar, redirigir al login
          localStorage.clear();
          window.location.href = '/api/auth/login';
          throw new Error('Sesi√≥n expirada');
        }
      }

      return response;
    }

    async function loadExperiences() {
      const container = document.getElementById('experiencesContainer');
      const user = JSON.parse(localStorage.getItem('user') || 'null');

      if (!user) {
        window.location.href = '/api/auth/login';
        return;
      }

      try {
        const res = await fetchWithAuth(`/api/experiences/guide/${user._id}`);

        if (res.ok) {
          allExperiences = await res.json();
          displayExperiences(allExperiences);
        } else {
          const error = await res.json();
          container.innerHTML = `<div class="empty-state"><p>Error: ${error.error || 'Error al cargar experiencias'}</p></div>`;
        }
      } catch (err) {
        console.error(err);
        if (err.message === 'Sesi√≥n expirada') {
          return; // Ya redirigido al login
        }
        container.innerHTML = '<div class="empty-state"><p>Error al conectar con el servidor</p></div>';
      }
    }

    function displayExperiences(experiences) {
      const container = document.getElementById('experiencesContainer');

      if (experiences.length === 0) {
        container.innerHTML = `
          <div class="empty-state">
            <h2>No tienes experiencias a√∫n</h2>
            <p>Crea tu primera experiencia para comenzar a compartir aventuras</p>
            <button class="btn-create" onclick="createNewExperience()">+ Nueva Experiencia</button>
          </div>
        `;
        return;
      }

      container.className = 'experiences-grid';
      container.innerHTML = experiences.map(exp => `
        <div class="experience-card">
          <div class="card-image">
            ${exp.photos && exp.photos.length > 0 
              ? `<img src="${exp.photos[0]}" alt="${exp.title}">` 
              : '<span>Sin imagen</span>'}
            <span class="status-badge status-${exp.status}">${getStatusLabel(exp.status)}</span>
          </div>
          <div class="card-content">
            <h3>${exp.title}</h3>
            <div class="card-meta">
              <span>üìç ${exp.location}</span>
              <span>üí∞ $${exp.pricePerPerson} ${exp.currency}</span>
            </div>
            <p class="card-description">${exp.description}</p>
            <div class="card-actions">
              <button class="btn btn-edit" onclick="editExperience('${exp._id}')">Editar</button>
              ${(exp.status === 'draft' || exp.status === 'archived')
                ? `<button class="btn btn-publish" onclick="publishExperience('${exp._id}')">Publicar</button>` 
                : ''}
              ${exp.status === 'published' 
                ? `<button class="btn btn-archive" onclick="archiveExperience('${exp._id}')">Archivar</button>
                   <button class="btn" onclick="startExperience('${exp._id}')" style="background-color: #17a2b8; color: white;">Iniciar</button>` 
                : ''}
              ${exp.status === 'progress'
                ? `<button class="btn" onclick="finishExperience('${exp._id}')" style="background-color: #28a745; color: white;">Terminar</button>`
                : ''}
              <button class="btn" onclick="viewReviews('${exp._id}')" style="background-color: #f6e05e; color: #2c3e50;"><i class="fas fa-star"></i> Ver Rese√±as</button>
              <button class="btn btn-delete" onclick="showDeleteModal('${exp._id}')">Eliminar</button>
            </div>
          </div>
        </div>
      `).join('');
    }

    function getStatusLabel(status) {
      const labels = {
        'draft': 'Borrador',
        'published': 'Publicada',
        'archived': 'Archivada',
        'cancelled': 'Cancelada',
        'completed': 'Completada',
        'progress': 'En Progreso'
      };
      return labels[status] || status;
    }

    function filterExperiences() {
      const filter = document.getElementById('statusFilter').value;
      
      if (filter === 'all') {
        displayExperiences(allExperiences);
      } else {
        const filtered = allExperiences.filter(exp => exp.status === filter);
        displayExperiences(filtered);
      }
    }

    function createNewExperience() {
      // Redirigir al formulario de creaci√≥n
      window.location.href = '/api/experiences/create';
    }

    const editModal = document.getElementById('editExperienceModal');
    let photosToKeep = [];
    let newPhotosFiles = [];

    function closeEditModal() {
      editModal.style.display = 'none';
    }

    function previewNewPhotos(input) {
        if (input.files) {
            Array.from(input.files).forEach(file => {
                newPhotosFiles.push(file);
            });
            renderNewPhotos();
            input.value = ''; // Limpiar input para permitir seleccionar m√°s
        }
    }

    function renderNewPhotos() {
        const container = document.getElementById('newPhotosPreview');
        container.innerHTML = '';
        
        newPhotosFiles.forEach((file, index) => {
            const reader = new FileReader();
            reader.onload = function(e) {
                const div = document.createElement('div');
                div.style.position = 'relative';
                div.style.width = '80px';
                div.style.height = '80px';
                
                const img = document.createElement('img');
                img.src = e.target.result;
                img.style.width = '100%';
                img.style.height = '100%';
                img.style.objectFit = 'cover';
                img.style.borderRadius = '4px';
                img.style.border = '1px solid #ddd';
                
                const btn = document.createElement('div');
                btn.innerHTML = '√ó';
                btn.style.position = 'absolute';
                btn.style.top = '-5px';
                btn.style.right = '-5px';
                btn.style.background = 'red';
                btn.style.color = 'white';
                btn.style.borderRadius = '50%';
                btn.style.width = '20px';
                btn.style.height = '20px';
                btn.style.display = 'flex';
                btn.style.alignItems = 'center';
                btn.style.justifyContent = 'center';
                btn.style.fontSize = '12px';
                btn.style.cursor = 'pointer';
                
                btn.onclick = () => {
                    newPhotosFiles.splice(index, 1);
                    renderNewPhotos();
                };

                div.appendChild(img);
                div.appendChild(btn);
                container.appendChild(div);
            }
            reader.readAsDataURL(file);
        });
    }

    function editExperience(id) {
      const exp = allExperiences.find(e => e._id === id);
      if (!exp) return;

      document.getElementById('editExpId').value = exp._id;
      document.getElementById('editTitle').value = exp.title;
      document.getElementById('editLocation').value = exp.location;
      document.getElementById('editDescription').value = exp.description;
      document.getElementById('editPrice').value = exp.pricePerPerson;
      document.getElementById('editCurrency').value = exp.currency;
      document.getElementById('editMinGroup').value = exp.minGroupSize;
      document.getElementById('editMaxGroup').value = exp.maxGroupSize;
      
      // Clear new photos preview
      document.getElementById('newPhotosInput').value = '';
      newPhotosFiles = [];
      renderNewPhotos();
      
      // Format date for datetime-local input (YYYY-MM-DDTHH:mm)
      if (exp.date) {
        const d = new Date(exp.date);
        // Adjust for timezone offset to show correct local time or just use UTC slice if stored as UTC
        // Assuming date is ISO string. datetime-local expects local time.
        // Simple hack:
        const formatted = d.toISOString().slice(0, 16);
        document.getElementById('editDate').value = formatted;
      }

      // Photos
      photosToKeep = [...(exp.photos || [])];
      renderCurrentPhotos();

      editModal.style.display = 'block';
    }

    function renderCurrentPhotos() {
        const container = document.getElementById('currentPhotosContainer');
        container.innerHTML = '';
        photosToKeep.forEach((url, index) => {
            const div = document.createElement('div');
            div.style.position = 'relative';
            div.style.width = '80px';
            div.style.height = '80px';
            div.style.cursor = 'pointer';
            div.title = 'Click para eliminar';
            
            const img = document.createElement('img');
            img.src = url;
            img.style.width = '100%';
            img.style.height = '100%';
            img.style.objectFit = 'cover';
            img.style.borderRadius = '4px';
            
            const badge = document.createElement('div');
            badge.innerHTML = '√ó';
            badge.style.position = 'absolute';
            badge.style.top = '-5px';
            badge.style.right = '-5px';
            badge.style.background = 'red';
            badge.style.color = 'white';
            badge.style.borderRadius = '50%';
            badge.style.width = '20px';
            badge.style.height = '20px';
            badge.style.display = 'flex';
            badge.style.alignItems = 'center';
            badge.style.justifyContent = 'center';
            badge.style.fontSize = '12px';

            div.appendChild(img);
            div.appendChild(badge);
            
            div.onclick = () => {
                photosToKeep.splice(index, 1);
                renderCurrentPhotos();
            };
            
            container.appendChild(div);
        });
    }

    document.getElementById('editExperienceForm').addEventListener('submit', async (e) => {
        e.preventDefault();
        const form = e.target;
        const id = document.getElementById('editExpId').value;
        const formData = new FormData(form);
        
        // Append keepPhotos
        photosToKeep.forEach(url => {
            formData.append('keepPhotos', url);
        });

        // Append new photos manually
        formData.delete('photos'); // Remove the empty/partial input value
        newPhotosFiles.forEach(file => {
            formData.append('photos', file);
        });

        formData.append('photosEdited', 'true');

        try {
            const res = await fetchWithAuth(`/api/experiences/${id}`, {
                method: 'PATCH',
                body: formData
            });

            if (res.ok) {
                alert('Experiencia actualizada');
                closeEditModal();
                loadExperiences();
            } else {
                const err = await res.json();
                alert('Error: ' + (err.error || 'Error al actualizar'));
            }
        } catch (err) {
            console.error(err);
            alert('Error de conexi√≥n');
        }
    });

