<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Registro - VERTIKA</title>
  <style>
    body {
      font-family: 'Arial', sans-serif;
      background: linear-gradient(to bottom, #4e7ed0, #2a3e8c);
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
      color: #333;
      position: relative;
    }

    /* Efecto de montaña suave */
    body::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: url('https://images.unsplash.com/photo-1501785888041-af3ef285b470?auto=format&fit=crop&w=1470&q=80') center/cover no-repeat;
      opacity: 0.2;
      z-index: -1;
    }

    .container {
      background: rgba(255, 255, 255, 0.95);
      padding: 40px 30px;
      border-radius: 12px;
      box-shadow: 0 15px 35px rgba(0,0,0,0.2);
      width: 360px;
      text-align: center;
    }

    h1 {
      margin-bottom: 30px;
      color: #2c3e50;
      font-size: 28px;
    }

    form input {
      width: 100%;
      padding: 14px 4px;
      margin: 10px 0;
      border: 1px solid #ccc;
      border-radius: 8px;
      font-size: 15px;
      transition: border 0.3s, box-shadow 0.3s;
    }

    form input:focus {
      border-color: #667eea;
      box-shadow: 0 0 5px rgba(102, 126, 234, 0.5);
      outline: none;
    }

    form button {
      width: 100%;
      padding: 14px;
      background: linear-gradient(135deg, #667eea, #764ba2);
      color: white;
      border: none;
      border-radius: 8px;
      font-size: 16px;
      cursor: pointer;
      margin-top: 15px;
      transition: background 0.3s;
    }

    form button:hover {
      background: linear-gradient(135deg, #5a67d8, #613abf);
    }

    p.error {
      color: #e74c3c;
      font-size: 14px;
      margin-bottom: 10px;
    }

    .signin {
      margin-top: 25px;
      font-size: 14px;
      color: #555;
    }

    .signin a {
      color: #667eea;
      font-weight: bold;
      text-decoration: none;
      transition: color 0.3s;
    }

    .signin a:hover {
      color: #5a67d8;
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Registro</h1>
    {{#if error}}
      <p class="error">{{error}}</p>
    {{/if}}
    <form action="/api/auth/register" method="POST">
      <input type="text" name="name" placeholder="Nombre completo" required>
      <input type="email" name="email" placeholder="Correo electrónico" required>
      <input type="password" name="password" placeholder="Contraseña" required>
      <input type="date" name="dateOfBirth" required>
      <button type="submit">Registrarse</button>
    </form>
    <div class="signin">
      ¿Ya tienes cuenta? <a href="/api/auth/login">Inicia sesión</a>
    </div>
  </div>
</body>
<script>
document.addEventListener('DOMContentLoaded', () => {
  const form = document.querySelector('form');

  form.addEventListener('submit', async (e) => {
    e.preventDefault(); // prevenir recarga

    const formData = new FormData(form);
    const data = Object.fromEntries(formData.entries());

    try {
      const res = await fetch('/api/auth/register', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data)
      });

      const result = await res.json();

      if (res.ok) {
        // Registro exitoso, redirigir a login
        alert('Registro exitoso. Por favor, verifica tu correo antes de iniciar sesión.');
        window.location.href = '/api/auth/login';
      } else {
        // Mostrar error en página
        alert(result.message || 'Ocurrió un error al registrar.');
      }
    } catch (err) {
      console.error(err);
      alert('Error al conectar con el servidor.');
    }
  });
});
</script>
</html>