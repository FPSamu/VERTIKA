{  
    "compilerOptions": {
        "target": "esnext",
        "outDir": "dist",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "strict": true,
        "typeRoots": ["./node_modules/@types"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "ts-node": {
        "files": true
    }
}